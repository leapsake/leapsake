{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Leapsake",
  "version": "0.1.0",
  "identifier": "Leapsake",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
		"decorations": true,
		"minHeight": 300,
		"minWidth": 400,
		"titleBarStyle": "Overlay",
		"trafficLightPosition": {
			"x": 10,
			"y": 15
		},
		"transparent": false,
        "height": 600,
        "title": "",
        "width": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
